<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_media_record"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@color/color_tv_audio_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="MediaRecord录音" />

    <TextView
        android:id="@+id/tv_media_player"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@color/color_tv_audio_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="MediaPlayer播放" />

    <TextView
        android:id="@+id/tv_audio_record"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@color/color_tv_audio_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="AudioRecord录音" />

    <TextView
        android:id="@+id/tv_audio_track"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@color/color_tv_audio_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="AudioTracker播放" />

    <TextView
        android:id="@+id/tv_audio_record_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/color_tv_audio_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/record_play_hint" />

    <TextView
        android:id="@+id/tv_audio_record_play_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/color_tv_audio_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/record_play_hint_low_delay" />
</LinearLayout>